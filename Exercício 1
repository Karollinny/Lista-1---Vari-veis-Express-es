algarismo1 = int(input("Digite o primeiro algarismo"))

algarismo2 = int(input("Digite o segundo algarismo"))

#Usar + para somar os algarismo

adicao = algarismo1 + algarismo2
print(adicao)

#Usar - para diminuir o algarismo

subtracao = algarismo1 - algarismo2
print(subtracao)

#Usar * para multiplicar o algarismo

multiplicacao = algarismo1 * algarismo2
print(multiplicacao)

#Usar o // para dividir o algarismo inteiro

divisao = algarismo1 // algarismo2
print(divisao)
